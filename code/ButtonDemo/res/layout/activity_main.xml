<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.buttondemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <com.example.buttondemo.RoundButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="按钮1"
        app:is_circle="true"
        app:stroke_color="@android:color/holo_red_dark"
        app:stroke_width="1dp" />

    <com.example.buttondemo.RoundButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="按钮2"
        app:is_circle="true"
        app:stroke_color="@android:color/holo_red_dark"
        app:stroke_width="4dp" />

    <com.example.buttondemo.RoundButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="按钮3"
        app:corner_radius="8dp"
        app:stroke_color="@android:color/holo_green_light"
        app:stroke_width="1dp" />

    <com.example.buttondemo.RoundButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="按钮4"
        app:corner_radius="8dp"
        app:solid_color="@android:color/holo_blue_bright"
        app:stroke_color="@android:color/holo_blue_dark"
        app:stroke_width="1dp" />

    <com.example.buttondemo.RoundButton
        android:id="@+id/btn_5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="按钮5"
        app:corner_radius="8dp"
        app:pressed_solid_color="@android:color/holo_blue_bright"
        app:pressed_stroke_color="@android:color/holo_blue_dark"
        app:pressed_stroke_width="1dp"
        app:stroke_color="@android:color/holo_green_dark"
        app:stroke_width="1dp" />

    <com.example.buttondemo.RoundButton
        android:id="@+id/btn_6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="按钮6"
        app:corner_radius="8dp"
        app:selected_solid_color="@android:color/holo_green_dark"
        app:selected_stroke_width="0dp"
        app:stroke_color="@android:color/holo_green_dark"
        app:stroke_width="1dp" />

    <com.example.buttondemo.RoundButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="按钮7"
        app:is_circle="true"
        app:solid_color="@android:color/holo_purple" />
    
   

</LinearLayout>